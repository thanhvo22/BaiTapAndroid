<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NhapSoDienThoai_341">
    <ImageView
        android:id="@+id/quaylai_nhapsodienthoai_341"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_quaylai"></ImageView>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/thanhngang_nhapsodienthoai_341"
        android:layout_below="@+id/quaylai_nhapsodienthoai_341"
        android:layout_width="match_parent"
        android:background="#969696"
        android:layout_height="2dp">

    </LinearLayout>
    <TextView
        android:id="@+id/chaoban2_341"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quaylai_nhapsodienthoai_341"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:text="Chào bạn,"
        android:textSize="30dp"
        android:textColor="#323232"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/nhapsodienthoai2_341"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chaoban2_341"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:textColor="#323232"
        android:textSize="18dp"
        android:text="Nhập số điện thoại để tiếp tục">
    </TextView>
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_below="@+id/nhapsodienthoai2_341"
        android:background="@drawable/duongvien1">
        <ImageView
            android:id="@+id/covietnam_341"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/covietnam">
        </ImageView>
        <ImageView
            android:id="@+id/dropdown_menu_341"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_xoxuong"
            android:layout_gravity="center"
            ></ImageView>
    </LinearLayout>
    <EditText
        android:id="@+id/nhapsodienthoai3_341"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="170dp"
        android:orientation="horizontal"

        android:hint="Số điện thoại"
        android:textColorHighlight="#7cff88"
        android:layout_below="@+id/nhapsodienthoai2_341"
        app:counterEnabled="true"
        android:background="@drawable/duongvien1">
    </EditText>

    <Button
        android:id="@+id/btntieptuc_341"
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_below="@id/nhapsodienthoai3_341"
        android:layout_centerHorizontal="true"
        android:background="@drawable/duongvien3"
        android:text="Tiếp tục"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="86dp"></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btntieptuc_341"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Bỏ qua"
        android:textSize="18dp"
        android:textColor="#9CC7FC"
        android:layout_centerHorizontal="true"></TextView>


</RelativeLayout>

